{
  "openapi": "3.0.0",
  "info": {
    "title": "API приложения МПР",
    "description": "API приложения для менеджеров пивоварни Рогозец",
    "contact": {
      "email": "a.e.itiligator@gmail.com",
      "name": "Андрей"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://46.174.253.173:8000/api",
      "description": "Продакшн"
    },
    {
      "url": "http://46.174.253.173:8000/sandbox",
      "description": "Песочница"
    }
  ],
  "tags": [
    {
      "name": "1С",
      "description": "Запросы для интеграции с 1С"
    },
    {
      "name": "Фронтенд",
      "description": "Запросы для пользовательских приложений"
    }
  ],
  "paths": {
    "/api-token-auth": {
      "summary": "саммари",
      "description": "точка запроса токена аутенфикации",
      "post": {
        "tags": [
          "Фронтенд"
        ],
        "summary": "Запрос токена аутентификации",
        "requestBody": {
          "description": "Пара логин-пароль",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserCredintials"
              },
              "examples": {}
            }
          }
        },
        "responses": {
          "200": {
            "description": "Токен аутентификации",
            "headers": {},
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TokenResponse"
                }
              }
            }
          },
          "400": {
            "description": "Некорректные данные пользователя"
          }
        },
        "description": "Получение токена аутентификации по паре логин-пароль",
        "operationId": "retrieve-token"
      }
    },
    "/client/all": {
      "post": {
        "summary": "Обновление перечня клиентов",
        "tags": [
          "1С"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "operationId": "post-clients",
        "description": "Обновление (на данный момент замена целиком, за исключением магазинов) перечня клиентов от 1С. Ожидает массив объектов описания клиентов",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Client"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Получение перечня клиентов и магазинов",
        "tags": [
          "Фронтенд"
        ],
        "description": "Получение перечня действующих клиентов и магазинов, для которых в authorizedManagersID присутствует ID запрашивающего менеджера (т.е. перечня клиентов запрашивающего менеджера)",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Client"
                  }
                }
              }
            }
          }
        },
        "operationId": "get-clients"
      },
      "parameters": []
    },
    "/product/all": {
      "get": {
        "summary": "Получение перечня товаров",
        "tags": [
          "Фронтенд"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          }
        },
        "operationId": "get-products",
        "description": "Возвращает массив объектов товаров"
      },
      "post": {
        "summary": "Обновление перечня товаров",
        "operationId": "post-products",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "description": "Обновление (на данный момент замена целиком) перечня товаров от 1С. Ожидает массив объектов описания товаров",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          }
        },
        "tags": [
          "1С"
        ]
      },
      "parameters": []
    },
    "/price/all": {
      "post": {
        "summary": "Обновление перечня цен",
        "tags": [
          "1С",
          "Фронтенд"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "operationId": "post-price",
        "description": "Обновление (на данный момент замена целиком всех) перкчня цен от 1С. Ожидает массив объектов описания цен ",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Price"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Запрос перечня цен",
        "tags": [
          "1С",
          "Фронтенд"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Price"
                  }
                }
              }
            }
          }
        },
        "operationId": "get-price",
        "description": "Запрос перечня цен на товары. Вовзращает массив объектов цен"
      },
      "parameters": []
    },
    "/visit/finished": {
      "get": {
        "summary": "Получение данных по всем завершенным визитам",
        "tags": [
          "1С"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/VisitResults"
                  }
                }
              }
            }
          }
        },
        "operationId": "get-visits",
        "description": "Вовращает массив объектов описания результатов всех завершенных, но не запрошенных ранее визитов",
        "parameters": []
      },
      "parameters": []
    },
    "/visit": {
      "get": {
        "summary": "Получение результата визита",
        "tags": [
          "Фронтенд",
          "1С"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VisitResults"
                }
              }
            }
          }
        },
        "operationId": "get-visit",
        "description": "Возвращает результат запрошенного визита",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "query",
            "name": "id",
            "description": "ID визита"
          }
        ]
      },
      "post": {
        "summary": "Запись результатов нового визита",
        "operationId": "post-visit",
        "responses": {
          "201": {
            "description": "Created"
          }
        },
        "description": "Точка для записи результатов новых визитов",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/VisitResults"
              }
            }
          },
          "description": "Объект описания результатов визита"
        },
        "tags": [
          "Фронтенд"
        ]
      },
      "put": {
        "summary": "Обновление статуса визита",
        "operationId": "put-visit",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "description": "Точка для обновления статуса оформления ПКО и отгрузки по товарам заказа",
        "tags": [
          "1С"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/VisitStatus"
              }
            }
          },
          "description": "Данные о состоянии оформления ПКО и отгрузки товаров"
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UserCredintials": {
        "title": "Пользовательские данные для аутентификации",
        "type": "object",
        "description": "Пара логин-пароль для получения токена аутентификации",
        "properties": {
          "username": {
            "type": "string",
            "description": "Имя пользователя"
          },
          "password": {
            "type": "string",
            "description": "Пароль"
          }
        },
        "required": [
          "username",
          "password"
        ]
      },
      "Client": {
        "title": "Клиент",
        "type": "object",
        "description": "Данные клиента",
        "x-examples": {},
        "properties": {
          "clientID": {
            "type": "string",
            "description": "Уникальный идентификатор клиента"
          },
          "name": {
            "type": "string",
            "description": "Наименование клиента для отображения пользователю"
          },
          "inn": {
            "type": "string",
            "description": "ИНН"
          },
          "clientType": {
            "type": "string",
            "description": "Тип клиента (хорека, драфт, магазин etc)"
          },
          "priceType": {
            "type": "string",
            "description": "Тип цен для клиента"
          },
          "delay": {
            "type": "integer",
            "default": 0,
            "description": "Отсрочка по договору",
            "format": "int32",
            "example": 0,
            "minimum": 0,
            "maximum": 45
          },
          "limit": {
            "type": "integer",
            "default": 0,
            "description": "Лимит",
            "format": "int64",
            "example": 0,
            "minimum": 0,
            "maximum": 100000
          },
          "authorizedManagersID": {
            "type": "array",
            "description": "Массив ID менеджеров, для которых доступен клиент",
            "items": {
              "type": "string"
            }
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "phone": {
            "type": "string"
          },
          "manager": {
            "type": "string"
          },
          "longitude": {
            "type": "string"
          },
          "latitude": {
            "type": "string"
          },
          "status": {
            "type": "boolean",
            "default": "1",
            "description": "Действует/не действует"
          },
          "dataBase": {
            "type": "boolean",
            "default": "0"
          }
        },
        "required": [
          "clientID",
          "name",
          "clientType",
          "priceType",
          "delay",
          "authorizedManagersID",
          "status",
          "dataBase"
        ]
      },
      "TokenResponse": {
        "type": "object",
        "title": "Токен аутентификации",
        "description": "Токен аутентификации",
        "properties": {
          "token": {
            "type": "string",
            "description": "Токен аутентификации"
          }
        },
        "required": [
          "token"
        ]
      },
      "Product": {
        "title": "Товар",
        "type": "object",
        "description": "Товары пивоварни",
        "properties": {
          "item": {
            "type": "string",
            "description": "Артикул товара"
          },
          "name": {
            "type": "string",
            "description": "Короткое наименование товара"
          },
          "description": {
            "type": "string",
            "description": "Развернутое описание товара"
          }
        },
        "required": [
          "item",
          "name",
          "description"
        ]
      },
      "Price": {
        "title": "Цена",
        "type": "object",
        "description": "Цена данного типа для товара ",
        "properties": {
          "productItem": {
            "type": "string",
            "description": "Артикул товара"
          },
          "priceType": {
            "type": "string",
            "description": "Тип цены"
          },
          "amount": {
            "type": "string",
            "description": "Величина в рублях"
          },
          "dataBase": {
            "type": "boolean"
          }
        },
        "required": [
          "productItem",
          "priceType",
          "amount",
          "dataBase"
        ]
      },
      "OrderedProducts": {
        "title": "Заказанный товар",
        "type": "object",
        "description": "Объект описания заказанного и отгруженного товара",
        "properties": {
          "productItem": {
            "type": "string",
            "description": "Артикул товара"
          },
          "orderedQuantity": {
            "type": "integer",
            "description": "Заказанное количество"
          },
          "deliveredQuantity": {
            "description": "Отгруженное количество",
            "type": "integer"
          }
        },
        "required": [
          "productItem"
        ]
      },
      "VisitResults": {
        "title": "Результат визита",
        "type": "object",
        "description": "Данные по результату визита",
        "x-examples": {
          "example-1": {}
        },
        "properties": {
          "visitID": {
            "type": "string",
            "description": "Уникальный идентификатор визита"
          },
          "date": {
            "type": "string",
            "format": "date",
            "description": "Дата совершения визита"
          },
          "dataBase": {
            "type": "boolean"
          },
          "clientID": {
            "type": "string",
            "description": "Уникальный идентификатор клиента"
          },
          "payment": {
            "type": "integer",
            "description": "Принятая оплата"
          },
          "orders": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderedProducts"
            }
          }
        },
        "required": [
          "visitID",
          "date",
          "dataBase",
          "clientID",
          "payment",
          "orders"
        ]
      },
      "VisitStatus": {
        "title": "Данные по состоянию визита",
        "type": "object",
        "description": "Объект с описанием состояния ПКО и отгрузки для визита",
        "properties": {
          "visitID": {
            "type": "string"
          },
          "cashRecieptIssued": {
            "type": "string"
          },
          "": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderedProducts"
            }
          }
        },
        "required": [
          "visitID"
        ]
      }
    },
    "securitySchemes": {
      "Token ": {
        "name": "Token ",
        "type": "apiKey",
        "in": "header",
        "description": ""
      }
    }
  }
}